{
  "name": "kumo",
  "version": "1.0.0",
  "description": "Production-grade monitoring app for Boundless Bento job execution and task management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security-check": "npm audit",
    "docker:build": "docker build -t kumo .",
    "docker:run": "docker run -p 3001:3001 kumo"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "bento",
    "job-monitor",
    "database",
    "postgresql",
    "monitoring",
    "dashboard",
    "real-time"
  ],
  "author": "",
